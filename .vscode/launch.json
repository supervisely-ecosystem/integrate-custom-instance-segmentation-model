{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "python",
            "request": "launch",
            // "program": "${file}",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${PYTHONPATH}",
                "LOG_LEVEL": "DEBUG",
            }
        },
        {
            "name": "Internal debug for Supervisely Team",
            "type": "python",
            "request": "launch",
            // "program": "${workspaceFolder}/src/main.py",
            "module": "uvicorn",
            "args": [
                "src.main:m.app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--ws",
                "websockets"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${PYTHONPATH}",
                "LOG_LEVEL": "DEBUG",
                "ENV": "production",
                "SLY_APP_DATA_DIR": "${workspaceFolder}/results",
                "TEAM_ID": "1",
                "FOLDER": "/temp/inst-seg-model"
            }
        },
